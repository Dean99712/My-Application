<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">


    <fragment
        android:id="@+id/fragmentContainerView"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        android:clipChildren="false"
        app:navGraph="@navigation/navigation_graph"
        />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_nav_bar"
        app:menu="@menu/bottom_menu"
        android:layout_gravity="bottom"
        app:fabAnimationMode="scale"
        app:fabAnchorMode="cradle"
        app:fabCradleMargin="10dp"
        app:fabAlignmentMode="center"
        app:hideOnScroll="true"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fadingEdgeLength="100dp"
        app:layout_anchor="@id/bottom_nav_bar"
        android:backgroundTint="@color/md_theme_dark_onPrimaryContainer"
        android:src="@drawable/ic_baseline_add_24"
        android:theme="@style/ThemeOverlay.Material3.FloatingActionButton.Surface" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
