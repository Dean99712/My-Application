<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:letterSpacing="0.08"
        android:paddingBottom="50dp"
        android:text="Choose an Option"
        android:textColor="@color/md_theme_dark_surfaceVariant"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gallery_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="80dp"
            android:drawableStart="@drawable/ic_round_perm_media_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/md_theme_dark_outline"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|start"
            android:text="Gallery"

            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/internet_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="80dp"
            android:drawableStart="@drawable/ic_baseline_pageview_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/md_theme_dark_outline"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|start"
            android:text="Internet"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/camera_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"

            android:layout_marginRight="32dp"
            android:layout_marginBottom="80dp"
            android:drawableStart="@drawable/ic_baseline_camera_alt_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/md_theme_dark_outline"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|start"
            android:text="Camera"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView2" />

    </LinearLayout>


</LinearLayout>




